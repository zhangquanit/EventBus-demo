<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eventbus.demo.MainActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_mainThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="onEventMainThread" />
    <Button
        android:id="@+id/btn_postThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="onEventPostThread" />
    <Button
        android:id="@+id/btn_backgroundThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="onEventBackgroundThread" />
    <Button
        android:id="@+id/btn_Async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="onEventAsync" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#a90b28"
        />
</LinearLayout>
